{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "GenericStoryGameV2",
    "version": "0.0.124"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "scope": [
          {
            "name": "file-manager-mac",
            "cmd": "open",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "file-manager-windows",
            "cmd": "explorer",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          },
          {
            "name": "file-manager-xdg",
            "cmd": "xdg-open",
            "args": [
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": false,
        "createDir": true,
        "removeDir": false,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": [
          "$APPDATA",
          "$APPDATA/*",
          "$APPDATA/**"
        ]
      },
      "protocol": {
        "asset": true,
        "assetScope": [
          "$APPDATA/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cn.Wind-Explorer.GenericStoryGameV2",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Generic Story Game V2",
        "width": 800,
        "height": 600,
        "minHeight": 600,
        "minWidth": 800,
        "transparent": true
      }
    ]
  }
}